

{% extends 'layout.njk' %}

{% block head %}

    <title> Foodfy - {{ recipe.title }}</title>

{% endblock %}



{% block content %}

        <div class="instructions-img">
            <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
        </div>

        <div class="instructions-content">
                
            <h1>{{ recipe.title }}</h1>
            <h4>por {{ recipe.author }}</h4>

            <h2>Ingredientes <span class="button">ESCONDER</span> </h2>

            <ul class="hide-show">
                {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
            

            <h2>Modo de preparo <span class="button">ESCONDER</span> </h2>

            <ul class="hide-show">
                {% for preparation in recipe.preparation %}
                <li>{{preparation}}</li>
                {% endfor %}
            </ul>


            <h2>Informações adicionais <span class="button">ESCONDER</span> </h2>
            <p class="hide-show">{{ recipe.information }}</p>

        </div>




{% endblock %}
