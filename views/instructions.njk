

{% extends 'layout.njk' %}

{% block head %}

    <title> Foodfy - {{ recipe.title }}</title>

{% endblock %}



{% block content %}

    <div class="instructions-img">
        <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
    </div>

    <h1>{{ recipe.title }}</h1>
    <h4>por {{ recipe.author }}</h4>

    <h2>Ingredientes</h2>
    <h2>Modo de preparo</h2>
    <h2>Informações adicionais</h2>
    <p>{{ recipe.information }}</p>

{% endblock %}
